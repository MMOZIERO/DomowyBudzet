<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dziennik.domowybudzet.Add">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paragon"
        android:id="@+id/buttonParagon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kwota"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignRight="@+id/buttonParagon"
        android:layout_alignEnd="@+id/buttonParagon"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:hint="Wpisz kwotÄ™"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategoria"
        android:id="@+id/textView5"
        android:textSize="16dp"
        android:layout_above="@+id/imageTransport"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_alignTop="@+id/imageMedia"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3"
        android:checked="false"
        android:layout_alignTop="@+id/imageEweryday"
        android:layout_toRightOf="@+id/imageMedia"
        android:layout_toEndOf="@+id/imageMedia"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox4"
        android:checked="false"
        android:layout_below="@+id/imageFun"
        android:layout_alignLeft="@+id/checkBox5"
        android:layout_alignStart="@+id/checkBox5"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox5"
        android:checked="false"
        android:layout_alignTop="@+id/checkBox2"
        android:layout_alignLeft="@+id/buttonParagon"
        android:layout_alignStart="@+id/buttonParagon" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox6"
        android:checked="false"
        android:layout_alignTop="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox5"
        android:layout_alignStart="@+id/checkBox5" />



    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageEweryday"
        android:src="@drawable/everyday"
        android:layout_below="@+id/imageMedia"
        android:layout_toLeftOf="@+id/checkBox3"
        android:layout_toStartOf="@+id/checkBox3" />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageTransport"
        android:src="@drawable/transport"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageFun"
        android:src="@drawable/fun"
        android:layout_above="@+id/imageHealth"
        android:layout_toLeftOf="@+id/buttonParagon"
        android:layout_toStartOf="@+id/buttonParagon" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageMedia"
        android:src="@drawable/media"

        android:layout_below="@+id/imageTransport"
        android:layout_alignLeft="@+id/imageTransport"
        android:layout_alignStart="@+id/imageTransport" />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageHealth"
        android:src="@drawable/health"

        android:layout_above="@+id/imageEweryday"
        android:layout_toLeftOf="@+id/buttonParagon"
        android:layout_toStartOf="@+id/buttonParagon" />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageMix"
        android:src="@drawable/rozne"
        android:layout_below="@+id/imageHealth"
        android:layout_alignLeft="@+id/imageHealth"
        android:layout_alignStart="@+id/imageHealth" />

</RelativeLayout>
